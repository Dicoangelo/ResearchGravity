{
  "manifest_version": 3,
  "name": "UCW Sovereign Capture",
  "version": "0.3.0",
  "description": "Universal Cognitive Wallet â€” Capture AI conversations from ChatGPT, Grok, Gemini, NotebookLM, and YouTube for sovereign cognitive data ownership.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://grok.x.ai/*",
    "https://gemini.google.com/*",
    "https://notebooklm.google.com/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["lib/capture.js", "interceptors/chatgpt.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://grok.x.ai/*"],
      "js": ["lib/capture.js", "interceptors/grok.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["lib/capture.js", "interceptors/gemini.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["lib/capture.js", "interceptors/notebooklm.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["lib/capture.js", "interceptors/youtube.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
